<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace = "boardcomplainMapper">

<insert id="reportsubmit">
  INSERT INTO "USER_COMPLAIN"
  VALUES(#{b_complain_no}, 
  		#{b_com1_ctg_no},
  		#{b_com2_ctg_no},
  		#{b_complainer},
  		#{b_complained},
  		#{b_com_content}
  		DEFAULT)
</insert>

<select id="boardDuplication">
	SELECT COUNT * FROM "BOARD_COMPLAIN"
	WHERE B_COM1_CTG_NO = #{category1}
	AND B_COM2_CTG_NO = #{category2}; 
</select>
  
  
</mapper>
